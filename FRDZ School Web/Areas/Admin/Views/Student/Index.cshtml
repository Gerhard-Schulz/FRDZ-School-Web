@using FRDZSchool.Utility;
@using FRDZSchool.Models.DatabaseModels;
@model IEnumerable<Student>
@{
    ViewData["Title"] = "Ученики";
}

<div class="container pt-4">
    <h1 class="text-primary text-center display-5 tracking-in-expand">Список учеников</h1>
    <div class="table-responsive pt-3">
        <div class="table-wrapper">
            <table class="table text-nowrap table-hover mb-0 table_sort">
                <thead class="noselect">
                    <tr class="table-dark cell-centered">
                        <th scope="col">@Html.DisplayNameForInnerType((Student s)=>s.Id)&nbsp</th>
                        <th scope="col">ФИО&nbsp</th>
                        <th>Класс&nbsp</th>
                        <th scope="col">@Html.DisplayNameForInnerType((Student s)=>s.Sex)&nbsp</th>
                        <th scope="col">@Html.DisplayNameForInnerType((Student s)=>s.Birthday)&nbsp</th>
                        <th scope="col" class="sticky-col right-col">
                            <a asp-controller="Student" asp-action="Add" class="btn btn-success w-100"><i class="bi bi-person-plus-fill big-icon"></i> Добавить</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr class="cell-centered">
                            <td scope="row">@obj.Id</td>
                            <td>@obj.Lastname @obj.Name @obj.Fathername</td>
                            <td>@obj.Grade</td>
                            <td>@obj.Sex</td>
                            <td>@obj.Birthday.ToString("d MMMM yyyy")</td>
                            <td class="sticky-col right-col" style="background-color: rgba(235, 235, 235, 0.9)">
                                <div class="d-flex text-nowrap">
                                    <div class="d-flex mx-1">
                                        <a asp-controller="Student" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-outline-warning"><i class="bi bi-person-gear big-icon"></i> Изменить</a>
                                    </div>
                                    <div class="d-flex mx-1">
                                        <a asp-controller="Student" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-outline-danger"><i class="bi bi-person-x big-icon"></i> Удалить</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
