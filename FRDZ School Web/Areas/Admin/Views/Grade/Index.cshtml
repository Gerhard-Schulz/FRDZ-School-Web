@using FRDZSchool.Utility;
@model IEnumerable<Grade>
@{
    ViewData["Title"] = "Классы";
}

<div class="container pt-4">
    <h1 class="text-primary text-center display-5 tracking-in-expand">Список классов</h1>
    <div class="table-responsive pt-3">
        <div class="table-wrapper">
            <table class="table text-nowrap table-hover mb-0 table_sort">
                <thead class="noselect">
                    <tr class="table-dark cell-centered">
                        <th scope="col">@Html.DisplayNameForInnerType((Grade g)=>g.Id)&nbsp</th>
                        <th scope="col">@Html.DisplayNameForInnerType((Grade g)=>g.Number)&nbsp</th>
                        <th scope="col">@Html.DisplayNameForInnerType((Grade g)=>g.AcademYear)&nbsp</th>
                        <th scope="col">@Html.DisplayNameForInnerType((Grade g)=>g.Specialization)&nbsp</th>
                        <th scope="col" class="sticky-col right-col">
                            <a asp-controller="Grade" asp-action="Add" class="btn btn-success w-100"><i class="bi bi-plus-square"></i> Добавить</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr class="cell-centered">
                            <td scope="row">@obj.Id</td>
                            <td>@obj.Number "@obj.Litera"</td>
                            <td>@obj.AcademYear.ToString("yyyy")</td>
                            <td>@obj.Specialization</td>
                            <td class="sticky-col right-col" style="background-color: rgba(235, 235, 235, 0.9)">
                                <div class="row g-0">
                                    <div class="col-6">
                                        <a asp-controller="Grade" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i> Изменить</a>
                                    </div>
                                    <div class="col-6">
                                        <a asp-controller="Grade" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-outline-danger"><i class="bi bi-x-square"></i> Удалить</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
